<p id="notice"><%= notice %></p>
<h1>Student Data:</h1>
<p>
  <strong>Given name:</strong>
  <%= @student.given_name %>
</p>

<p>
  <strong>Middle name:</strong>
  <%= @student.middle_name %>
</p>

<p>
  <strong>Family name:</strong>
  <%= @student.family_name %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @student.date_of_birth %>
</p>

<p>
  <strong>Grade point average:</strong>
  <%= @student.grade_point_average %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @student.start_date %>
</p>

<h2>List of student awards</h2>
<% if @student.awards.blank? %>
  <%= "This student has not won any awards" %>
<% else %>
  <% @student.awards.each do |award| %>
    <ul>
      <li> <%= award.name %> </li>
    </ul>
  <% end %>
<% end %>



<%= link_to 'Edit', edit_student_path(@student) %>
<%= link_to 'Awards', student_awards_path(@student) %>
<%= link_to 'Back', students_path %>
